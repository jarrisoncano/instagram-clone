{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/features/*": ["features/*"],
			"@/shared/*": ["shared/*"],
			"@/types/*": ["types/*"],
			"@/utils/*": ["utils/*"],
			"@/styles/*": ["styles/*"],
			"@/assets/*": ["assets/*"],
			"@/icons/*": ["assets/icons/*"]
		},
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
